.media_vedette {
/* animation: anim_media 6s infinite reverse;*/
 /* background-color: var(--test);*/
  background-image: url('./images/media_vedette_test.jpg');
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  filter: saturate(40%) ;
  height: 100%;
  min-height: 80vh; 
  opacity: 0.8;
  position: relative;
  width: 100%;
 
}

@keyframes anim_media {
  0%, 100% {
    filter: blur(0px);

  }
  50% {
    filter: blur(20px);
  }
}

.media_vedette::before {
background-color:  hsl(29, 100%, 45%);
/* background-color: hsl(220, 100%, 50%);*/
/*background-color: hsl(352, 89%, 50%);*/
  content: '';
  display: block;
  height: 100%;
  left: 0;
  mix-blend-mode: hue;
  position: absolute;
  top: 0;
  width: 100%;
}

.media_vedette::after {
background-color: hsl(227, 100%, 15%);
 /*background-color: hsl(220, 89%, 50%);*/
 background-color: var(--complementaire);
  content: '';
  display: block;
  height: 100%;
  left: 0;
  mix-blend-mode: darken;
  position: absolute;
  top: 0;
  width: 100%;
}